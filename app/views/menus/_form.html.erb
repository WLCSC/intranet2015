<%= form_for(@menu) do |f| %>
  <% if @menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% @menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <strong><%= "If you don't want the link to take you anywhere, please start the Url with a pound sign (#).  Otherwise, please start the Url with \"http\"." %></strong>
  <div class="field">
    <br>
    <%= f.label :title, 'Title*' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :url, 'URL*' %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :menu_id %><br>
    <% @menus = Menu.all %>
    <%= f.select(:menu_id, options_for_select(@menus.map { |m| [m.parenter, m.id]}, selected = @menu.menu_id), :include_blank => true) %>
  </div>
  <br>
  <p>*You must fill in the fields with asterisks.</p>
  <br>
  <div class="actions">
    <%= f.submit nil, class: "btn btn-success"%>
  </div>
<% end %>
