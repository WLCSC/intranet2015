<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table cellspacing="10">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User sid</th>
      <th>Expires</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.content %></td>
        <td><%= note.user_sid %></td>
        <td><%= note.expires.strftime("%b %d, %Y") %></td>
        <td><%= link_to 'Show', note, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_note_path(note), class:"btn btn-warning color white" %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
