<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @note.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @note.content %>
</p>

<p>
  <strong>User sid:</strong>
  <%= @note.user_sid %>
</p>

<p>
  <strong>Expires:</strong>
  <% if @note.expires != nil %>
    <%= @note.expires.strftime("%b %d, %Y") %>
  <% else %>
    <%= "" %>
  <% end %>
</p>

<%= link_to 'Edit', edit_note_path(@note), class: "btn btn-warning" %>
<%= link_to 'Back', notes_path, class: "btn btn-primary" %>
<%= link_to 'Destroy', @note, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %>
