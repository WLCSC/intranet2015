<p id="notice"><%= notice %></p>

<h1>References</h1>

<table cellspacing = "10">
  <thead>
    <tr>
      <th>Title</th>
      <th>Username</th>
      <th>Password</th>
      <th>External</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @references.each do |reference| %>
      <tr>
        <td><%= link_to reference.title, reference.url  %></td>
        <td><%= reference.username %></td>
        <td><%= reference.password %></td>
        <td><% if reference.external %>
          <%= "Yes" %>
        <% else %>
          <%= "No" %>
        <% end %>
        </td>
        <td><%= reference.notes %></td>
        <td><%= link_to 'Show', reference, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_reference_path(reference), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', reference, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reference', new_reference_path, class:"btn btn-primary" %>
